<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ndroid="http://schemas.android.com/apk/res-auto">

    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="3dp"
                android:color="#5112330D" />

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <corners
                android:topLeftRadius="25dp"
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"
                android:topRightRadius="25dp" />

            <gradient android:angle="270"
                android:endColor="#f1f3f4"
                android:startColor="#f7f8f9" />
            <!-- <solid android:color="#51ffffff" /> -->

        </shape>
    </item>
    <!-- pressed -->
    <item android:state_enabled="true">
        <shape>
            <stroke
                android:width="3dp"
                android:color="#51f48405" />

            <padding android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"
                android:topLeftRadius="25dp"
                android:topRightRadius="25dp" />

            <gradient
                android:angle="270"
                android:endColor="#51d77b3a"
                android:startColor="#51ba550e" />
            <!-- <solid android:color="#51ffffff" /> -->

        </shape>
    </item>
    </selector>