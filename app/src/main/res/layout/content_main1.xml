    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@drawable/sorir"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="1"
                android:layout_marginTop="100dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:background="@drawable/bbb_s"
                    android:drawableTop="@drawable/traning"
                    android:padding="20dp"
                    android:text="@string/peoplen_tech_Traning"
                    android:textColor="#fff"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bbb_s"
                    android:drawableTop="@drawable/software"
                    android:padding="20dp"
                    android:text="@string/peoplen_tech_software"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:layout_marginBottom="55dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".65"
                android:gravity="start"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:background="@drawable/bbb_s"
                    android:drawableTop="@drawable/service"
                    android:paddingTop="14dp"
                    android:padding="20dp"
                    android:text="Consulting"
                    android:textColor="#fff"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button4"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:padding="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bbb_s"
                    android:drawableTop="@drawable/about"
                    android:text="@string/peoplen_tech_About"
                    android:textColor="#fff"
                    android:textAlignment="center" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


