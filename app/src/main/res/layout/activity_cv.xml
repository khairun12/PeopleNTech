<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI_Activity.CVActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/spin_view"
            android:layout_margin="10dp">

            <Spinner
                android:id="@+id/typeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:dropDownSelector="@color/color_white"
                android:gravity="center">

            </Spinner>

        </LinearLayout>



        <EditText
            android:id="@+id/cv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:drawableStart="@drawable/query_name"
            android:inputType="text"
            android:drawablePadding="5dp"
            android:layout_margin="10dp"
            android:padding="15dp"/>

        <EditText
            android:id="@+id/cv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/query_email"
            android:drawablePadding="5dp"
            android:layout_margin="10dp"
            android:padding="15dp"/>

        <EditText
            android:id="@+id/cv_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:drawableStart="@drawable/query_phone"
            android:drawablePadding="5dp"
            android:inputType="phone"
            android:layout_margin="10dp"
            android:padding="15dp"/>

        <Button
            android:id="@+id/btn_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Upload CV"
            android:textColorHint="#000"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:visibility="gone"/>


        <EditText
            android:id="@+id/queryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:hint="Write Query"
            android:drawableStart="@drawable/query_note"
            android:drawablePadding="5dp"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:text="Submit"
            android:textAlignment="center"
            android:drawableStart="@drawable/query_submit"
            android:gravity="center"
            android:textColor="#fff"
            android:background="#0095da" />




    </LinearLayout>

</ScrollView>