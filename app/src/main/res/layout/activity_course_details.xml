<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="15dp"
        android:id="@+id/dev_tittle"
        android:background="#2093d1"
        android:textAlignment="center"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="#000"
           android:textSize="17sp"
           android:layout_marginTop="5dp"
           android:padding="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginStart="10dp"
           android:layout_marginBottom="5dp"
           android:layout_gravity="center_vertical|end"
           android:id="@+id/dev_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/otherLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:text="Batch Information : "
            android:textColor="#0095da"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="17sp"
            android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:background="#ddd"
                android:layout_weight=".5"
                android:layout_marginTop="5dp"/>



                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:background="@null"
                    android:layout_weight=".5"
                    android:layout_marginTop="5dp"/>




            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2093d1"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Days : "
                    android:drawableLeft="@drawable/devk_duration"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="17sp"/>


                <TextView
                    android:id="@+id/dev_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Sunday, Monday "
                    android:textAlignment="viewStart"
                    android:textColor="#fff"
                    android:textSize="17sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eff0f1"
                android:layout_marginTop="4dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Regular Price : "
                    android:drawableLeft="@drawable/devk_price"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:textColor="#fff"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/dev_regular_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="10,000"
                    android:textAlignment="viewStart"
                    android:textColor="#fff"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="BDT"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:textColor="#fff"
                    android:textSize="15sp"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eff0f1"
                android:layout_marginTop="4dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Discount Price : "
                    android:drawableLeft="@drawable/devk_price"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/dev_discount_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="10"
                    android:textAlignment="viewStart"
                    android:textColor="#fff"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="%"
                    android:textAlignment="viewStart"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eff0f1"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Total Hour : "
                    android:drawableLeft="@drawable/devk_duration"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/dev_total_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="90"
                    android:textAlignment="viewStart"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eff0f1"
                android:layout_marginTop="4dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Start Date : "
                    android:drawableLeft="@drawable/devk_date"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:textColor="#fff"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/dev_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="20-05-05"
                    android:textAlignment="viewStart"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eff0f1"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Last Date Of Admission : "
                    android:drawableLeft="@drawable/devk_date"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/dev_last_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="30-05-05"
                    android:textAlignment="viewStart"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eff0f1"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Instructor"
            android:textColor="#0095da"
            android:textSize="17sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="#fff"
            android:textAlignment="viewStart"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:background="#ddd"
                    android:layout_weight=".5"
                    android:layout_marginTop="5dp"/>



                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:background="@null"
                    android:layout_weight=".5"
                    android:layout_marginTop="5dp"/>




            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="#dddddd">

            <ImageView
                android:id="@+id/imgInstructor"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_gravity="center"
                android:src="@drawable/testperson"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

           <!-- <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:text="Name : "
                android:textColor="#0095da"
                android:textSize="15sp"
                android:layout_margin="5dp" />-->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="xyz"
                android:id="@+id/dev_teacher_name"
                android:textColor="#0095da"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="5dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

         <!--   <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:text="Designation : "
                android:textColor="#0095da"
                android:textSize="15sp"
                android:layout_margin="5dp" />-->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Sr. Faculty"
                android:id="@+id/dev_teacher_deg"
                android:textColor="#0095da"
                android:textSize="16sp"
                android:layout_margin="5dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:text="teacher content"
                android:id="@+id/dev_teacher_content"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        </LinearLayout>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Curriculum"
            android:textColor="#0095da"
            android:textSize="17sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="#fff"
            android:textAlignment="viewStart"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:background="#ddd"
                android:layout_weight=".5"
                android:layout_marginTop="5dp"/>



            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:background="@null"
                android:layout_weight=".5"
                android:layout_marginTop="5dp"/>

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/devK_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:scrollbars="vertical" />


    </LinearLayout>




</android.support.v4.widget.NestedScrollView>
